<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
    </default>

    <!--
    This is the submission container page for R&R, A&A and Stories
    It can be accessed at the root of your magento URL context.  For example:
        www.yourdomain.com/bazaarvoice      (assuming magento runs your entire site)
        or
        www.yourdomain.com/magento/bazaarvoice
    -->
    <bazaarvoice_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <block type="bazaarvoice/bazaarvoice" name="headerincludes" template="bazaarvoice/submit/headerincludes.phtml" after="-" />
            <action method="setRobots"><value>noindex, nofollow</value></action>
        </reference>
        <reference name="content">
            <block type="bazaarvoice/submissioncontainer" name="submissioncontainer" template="bazaarvoice/submit/other/submissioncontainer.phtml" />
        </reference>
    </bazaarvoice_index_index>

    <!--
    This is the submission container page for Active Profiles
    It can be accessed at the root of your magento URL context.  For example:
        www.yourdomain.com/bazaarvoice/profile/edit      (assuming magento runs your entire site)
        or
        www.yourdomain.com/magento/bazaarvoice/profile/edit
    -->
    <bazaarvoice_profile_edit>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <block type="bazaarvoice/bazaarvoice" name="headerincludes" template="bazaarvoice/submit/headerincludes.phtml" after="-" />
        </reference>
        <reference name="content">
            <block type="bazaarvoice/bazaarvoice" name="submissioncontainer" template="bazaarvoice/submit/cp/submissioncontainer.phtml" />
        </reference>
    </bazaarvoice_profile_edit>

    <!--
    This is the display container page for Active Profiles
    It can be accessed at the root of your magento URL context.  For example:
        www.yourdomain.com/bazaarvoice/profile/display      (assuming magento runs your entire site)
        or
        www.yourdomain.com/magento/bazaarvoice/profile/display
    -->
    <bazaarvoice_profile_display>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <block type="bazaarvoice/bazaarvoice" name="headerincludes" template="bazaarvoice/display/headerincludes.phtml" after="-" />
        </reference>
        <reference name="content">
            <block type="bazaarvoice/bazaarvoice" name="displaycontainer" template="bazaarvoice/display/cp/profile.phtml" />
        </reference>
    </bazaarvoice_profile_display>

    <!--
    Set up BV content to be injectable on all product and category pages.  Note that the head inclusion of bvapi.js will be
    made on all pages, regardless of whether or not any other blocks are inserted into the template (like bv_reviews).
    -->
    <catalog_product_view>
        <reference name="head">
            <block type="bazaarvoice/bazaarvoice" name="headerincludes" template="bazaarvoice/display/headerincludes.phtml" after="-" />
            <block type="bazaarvoice/bazaarvoice" name="headerproduct" template="bazaarvoice/display/headerproduct.phtml" after="headerincludes" />
        </reference>
        <reference name="content">
            <reference name="product.info">
                <block type="bazaarvoice/bazaarvoice" name="reviewsummary" as="bv_reviewsummary" template="bazaarvoice/display/rr/reviewsummary.phtml" />
                <block type="bazaarvoice/bazaarvoice" name="reviews" as="bv_reviews" template="bazaarvoice/display/rr/reviews.phtml" />

                <block type="bazaarvoice/bazaarvoice" name="questionsummary" as="bv_questionsummary" template="bazaarvoice/display/qa/questionsummary.phtml" />
                <block type="bazaarvoice/bazaarvoice" name="questions" as="bv_questions" template="bazaarvoice/display/qa/questions.phtml" />
            </reference>
        </reference>
    </catalog_product_view>

    <catalog_category_view>
        <reference name="head">
            <block type="bazaarvoice/bazaarvoice" name="headerincludes" template="bazaarvoice/display/headerincludes.phtml" after="-" />
        </reference>
        <reference name="content">
            <reference name="category.products">
                <reference name="product_list" >
                    <!-- Review Summary and List blocks intentionally omitted here.  RR is not supported on categories.  -->
                    <block type="bazaarvoice/bazaarvoice" name="questionsummary" as="bv_questionsummary" template="bazaarvoice/display/qa/questionsummary.phtml" />
                    <block type="bazaarvoice/bazaarvoice" name="questions" as="bv_questions" template="bazaarvoice/display/qa/questions.phtml" />
                </reference>
            </reference>
        </reference>
    </catalog_category_view>

