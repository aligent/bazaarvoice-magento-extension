    configData.doShowContent = function () {
    	<?php echo Mage::helper('Bazaarvoice')->getConfigPropertyForBVProduct("stories", "DoShowContentJavascript") . "\n"; ?>
    };
	$BV.ui("sy", getStoriesDisplayFormat(), configData);
</script>
<?php } ?>