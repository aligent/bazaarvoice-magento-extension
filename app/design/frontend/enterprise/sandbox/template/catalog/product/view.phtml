<script>
(function ($) {
	var self = this;
	
	self.tabs = new Enterprise.Tabs('collateral-tabs');

	self.scrollToElement = function (id) {
		$('html,body').animate({
			scrollTop: $('#'+id).offset().top
		}, 'slow');
	};

	self.registerTab = function (linkSelector, tabId) {
		$(linkSelector).live('click', function (e) {
			e.preventDefault();
			self.tabs.activeTab = document.getElementById(tabId);
			self.tabs.select();
			self.scrollToElement(tabId);
		});
	};

	self.registerTab('#BVRRRatingSummaryLinkReadID > a','tab-reviews');
	self.registerTab('#BVQASummaryBoxViewQuestionsID > a','tab-questions');
	self.registerTab('#BVSYSummaryBoxLinkReadID > a','tab-stories');
}(jQuery));
</script>