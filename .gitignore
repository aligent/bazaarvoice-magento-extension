# replace {extension} placeholder with your extension name
  
# ignore phpstorm files
/.idea
*.DS_Store
  
# ignore our admin_toolbox stuff if it was used
/admin_toolbox

# Ignore all not in specifically included sub folders
/*
!/sfcrel/
!/app/
!/js/
!/lib/
!/var/
!/includes/
!/shell/
!/.gitignore

# Don't ignore build scripts
!/build.xml
!/phpunit.xml*
!/phpdox.xml*

# Allow shell scripts for kount ext
/shell/*
!/shell/bv_*.php

# Needed for Magento pacakge configuration file
/var/*
!/var/connect/

# ignore all in js, except module files for this module
/js/*
!/js/Bazaarvoice/

# Ignore lib other than Bazaarvoice
/lib/*
!/lib/Bazaarvoice/
  
# Ignore all in app, except code & etc
# Ignore all in app/code except local/Bazaarvoice
/app/*
!/app/code/
!/app/etc/
!/app/design/
!/skin/

#include the necessary skin files
/skin/*
!/skin/frontend/
/skin/frontend/*
!/skin/frontend/base/
/skin/frontend/base/*
!/skin/frontend/base/default/
/skin/frontend/base/default/*
!/skin/frontend/base/default/images/
/skin/frontend/base/default/images/*
!/skin/frontend/base/default/images/bazaarvoice/
  
  
# Ignore all in app/code/local except Bazaarvoice
/app/code/core
/app/code/community
/app/code/local/*
!app/code/local/Bazaarvoice/
  
# Ignore all of app/etc except our specific module files
/app/etc/*
!/app/etc/modules/
/app/etc/modules/*
!/app/etc/modules/bazaarvoice.xml
  
#Ignore all of app/design except for our files
/app/design/*
!app/design/frontend/
!app/design/adminhtml/
!app/design/locale/

/app/design/frontend/*
!/app/design/frontend/enterprise/
/app/design/frontend/enterprise/default/etc/
/app/design/frontend/enterprise/default/template/*
!/app/design/frontend/enterprise/default/template/bazaarvoice/
/app/design/frontend/enterprise/default/layout/*
!/app/design/frontend/enterprise/default/layout/bazaarvoice.xml

/app/design/adminhtml/*
!/app/design/adminhtml/default/
/app/design/adminhtml/default/find/
/app/design/adminhtml/default/default/etc/
/app/design/adminhtml/default/default/locale/
/app/design/adminhtml/default/default/template/*
!/app/design/adminhtml/default/default/template/bazaarvoice/
/app/design/adminhtml/default/default/layout/*
!/app/design/adminhtml/default/default/layout/bazaarvoice.xml

/app/design/locale/*
!/app/design/locale/en_US/
/app/design/locale/en_US/*
!/app/design/locale/en_US/template/
/app/design/locale/en_US/template/*
!/app/design/locale/en_US/template/email/
/app/design/locale/en_US/template/email/*
!/app/design/locale/en_US/template/email/bazaarvoice*
